<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Co Mi Szkodzi"
             x:Class="CoMiSzkodzi.MainPage">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" >
            <Button Command="{Binding WhatYouEatCommand}" x:Name="WhatYouEat" FontSize="Large" HorizontalOptions="Fill" BackgroundColor="DarkBlue" Text="Co dziś jadłeś?" TextColor="White" Margin="5" CornerRadius="20"/>
            <Button Command="{Binding WeekCommand}" x:Name="Week" FontSize="Large" HorizontalOptions="Fill" BackgroundColor="DodgerBlue" Text="Podsumuj posiłki" TextColor="White" Margin="5" CornerRadius="20"/>
            <Button Command="{Binding CheckCommand}" x:Name="Check" FontSize="Large" HorizontalOptions="Fill" BackgroundColor="CornflowerBlue" Text="Mogę / Nie mogę" TextColor="White" Margin="5" CornerRadius="20"/>
            <Button Command="{Binding InformationsCommand}" x:Name="Informations" FontSize="Large" HorizontalOptions="Fill" BackgroundColor="DodgerBlue" Text="Informacje" TextColor="White" Margin="5" CornerRadius="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>