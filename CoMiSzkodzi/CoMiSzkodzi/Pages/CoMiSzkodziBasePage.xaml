<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoMiSzkodzi.CoMiSzkodziBasePage">
    <ContentView.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="{Binding NavBarBackgroundColor}" >
                <Button Command="{Binding NavigateBackCommand}" HorizontalOptions="StartAndExpand" Image="backarrow.png" BackgroundColor="{Binding NavBarBackgroundColor}" Padding="0"/>
                <Label Text="{Binding Title}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="White" FontAttributes="Bold" FontSize="Large"/>
                <Button Command="{Binding NavigateHomeCommand}" HorizontalOptions="EndAndExpand" Image="home.png" BackgroundColor="{Binding NavBarBackgroundColor}" Padding="0"/>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>