<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoMiSzkodzi.CoMiSzkodziBasePage">
    <ContentView.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="Goldenrod" >
                <Button HorizontalOptions="StartAndExpand" Image="backarrow.png" Margin="0" Padding="0" BackgroundColor="Goldenrod"/>
                <Label Text="" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" x:Name="TitleLabel" TextColor="White" FontAttributes="Bold" FontSize="Large"/>
                <Button HorizontalOptions="EndAndExpand" Image="home.png" Margin="0" Padding="0" BackgroundColor="Goldenrod" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>